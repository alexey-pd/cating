    "target": "ES2022",
    "module": "CommonJS",
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./api",
    "outDir": "./dist",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["api/**/*.ts"]
}
